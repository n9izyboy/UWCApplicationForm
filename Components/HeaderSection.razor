@* Header Section with UWC Badge *@

<header class="bg-uwc-navy text-white shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <!-- UWC Logo -->
        <div class="flex items-center gap-4">
            <div class="flex items-center justify-center bg-white rounded-lg p-2">
                <img src="images/uwc-logo.png" alt="University of Western Cape" class="h-16 w-auto object-contain" />
            </div>
            <div class="hidden md:block">
                <h1 class="text-xl font-bold">University of Western Cape</h1>
                <p class="text-sm text-gray-300">Online Application Portal</p>
            </div>
        </div>

        <!-- Navigation -->
        <div class="flex items-center gap-4">
            @if (!string.IsNullOrEmpty(ApplicantName))
            {
                <div class="hidden sm:block text-right">
                    <p class="text-sm font-medium">@ApplicantName</p>
                    <p class="text-xs text-gray-300">Applicant</p>
                </div>
            }
            
            @if (ShowCloseButton)
            {
                <button 
                    @onclick="OnClose" 
                    class="p-2 hover:bg-white hover:bg-opacity-10 rounded-lg transition-all"
                    aria-label="Close application">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            }
        </div>
    </div>
</header>

@code {
    [Parameter]
    public string ApplicantName { get; set; } = string.Empty;

    [Parameter]
    public bool ShowCloseButton { get; set; } = true;

    [Parameter]
    public EventCallback OnClose { get; set; }
}
