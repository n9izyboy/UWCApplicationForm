@* Career Recommendation Card Component *@

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 hover:shadow-xl transition-all border-2 border-transparent hover:border-uwc-gold">
    <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
            <h3 class="text-2xl font-bold text-uwc-navy dark:text-uwc-gold mb-2">@Career.CareerName</h3>
            <p class="text-gray-600 dark:text-gray-300 mb-3">@Career.Description</p>
            
            <!-- Match Score -->
            <div class="flex items-center gap-2 mb-3">
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Match Score:</span>
                <div class="flex-1 max-w-xs">
                    <div class="h-3 bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden">
                        <div class="h-full @GetMatchColorClass(Career.MatchScore) transition-all" style="width: @Career.MatchScore%"></div>
                    </div>
                </div>
                <span class="text-lg font-bold @GetMatchColorClass(Career.MatchScore)">@Career.MatchScore.ToString("F0")%</span>
            </div>
            
            <!-- Match Reason -->
            <p class="text-sm text-gray-600 dark:text-gray-400 italic">@Career.MatchReason</p>
        </div>
        
        <!-- Field Badge -->
        <div class="ml-4">
            <span class="px-4 py-2 bg-uwc-navy text-white rounded-full text-sm font-semibold">
                @Career.Field
            </span>
        </div>
    </div>

    @if (IsExpanded)
    {
        <div class="mt-6 space-y-6 fade-in">
            <!-- Education Requirements -->
            <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                    üéì Education & Study Path
                </h4>
                <div class="space-y-2 ml-6">
                    <p><span class="font-semibold">Minimum Required:</span> @Career.MinimumEducation</p>
                    <p><span class="font-semibold">Years of Study:</span> @Career.YearsOfStudy years</p>
                    <div>
                        <p class="font-semibold mb-1">Recommended Degrees:</p>
                        <ul class="list-disc list-inside text-gray-700 dark:text-gray-300">
                            @foreach (var degree in Career.RecommendedDegrees)
                            {
                                <li>@degree</li>
                            }
                        </ul>
                    </div>
                    <div>
                        <p class="font-semibold mb-1">Subject Requirements:</p>
                        <div class="flex flex-wrap gap-2">
                            @foreach (var subject in Career.RequiredSubjects)
                            {
                                <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded-full text-sm">
                                    @subject
                                </span>
                            }
                        </div>
                    </div>
                    @if (Career.SubjectMinimums.Any())
                    {
                        <div>
                            <p class="font-semibold mb-1">Minimum Marks Required:</p>
                            <div class="grid grid-cols-2 md:grid-cols-3 gap-2">
                                @foreach (var min in Career.SubjectMinimums)
                                {
                                    <div class="px-3 py-2 bg-gray-100 dark:bg-gray-700 rounded-lg">
                                        <span class="text-sm">@min.Key:</span>
                                        <span class="font-bold text-uwc-gold ml-2">@min.Value%</span>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Certifications -->
            @if (Career.Certifications.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        üìú Professional Certifications
                    </h4>
                    <div class="space-y-3 ml-6">
                        @foreach (var cert in Career.Certifications)
                        {
                            <div class="p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <div class="flex items-start justify-between">
                                    <div>
                                        <p class="font-semibold text-gray-800 dark:text-gray-200">@cert.Name</p>
                                        <p class="text-sm text-gray-600 dark:text-gray-400">@cert.IssuingBody ‚Ä¢ @cert.Duration</p>
                                    </div>
                                    @if (cert.IsRequired)
                                    {
                                        <span class="px-2 py-1 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 rounded text-xs font-bold">Required</span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded text-xs font-bold">Optional</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Salary Information -->
            <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                    üí∞ Salary Expectations (South Africa)
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 ml-6">
                    <div class="p-4 bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900 dark:to-green-800 rounded-lg">
                        <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">Entry Level</p>
                        <p class="text-xl font-bold text-green-800 dark:text-green-200">@Career.EntrySalaryRange</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">0-3 years experience</p>
                    </div>
                    <div class="p-4 bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900 dark:to-blue-800 rounded-lg">
                        <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">Mid-Career</p>
                        <p class="text-xl font-bold text-blue-800 dark:text-blue-200">@Career.MidCareerSalaryRange</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">4-10 years experience</p>
                    </div>
                    <div class="p-4 bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900 dark:to-purple-800 rounded-lg">
                        <p class="text-sm text-gray-600 dark:text-gray-300 mb-1">Senior Level</p>
                        <p class="text-xl font-bold text-purple-800 dark:text-purple-200">@Career.SeniorSalaryRange</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">10+ years experience</p>
                    </div>
                </div>
                <div class="mt-3 ml-6 p-3 bg-yellow-50 dark:bg-yellow-900 rounded-lg">
                    <p class="text-sm"><span class="font-semibold">Job Outlook:</span> @Career.JobOutlook</p>
                </div>
            </div>

            <!-- Career Progression -->
            @if (Career.TypicalRoles.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        üìà Career Progression Path
                    </h4>
                    <div class="ml-6 flex items-center gap-4 overflow-x-auto pb-2">
                        @for (int i = 0; i < Career.TypicalRoles.Count; i++)
                        {
                            <div class="flex items-center gap-2 flex-shrink-0">
                                <div class="px-4 py-3 bg-uwc-navy text-white rounded-lg min-w-[150px] text-center">
                                    <p class="text-xs opacity-75 mb-1">Step @(i + 1)</p>
                                    <p class="font-semibold">@Career.TypicalRoles[i]</p>
                                </div>
                                @if (i < Career.TypicalRoles.Count - 1)
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-uwc-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                }
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Day-to-Day Activities -->
            @if (Career.DailyActivities.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        üìã What You'll Do Daily
                    </h4>
                    <ul class="ml-6 space-y-2">
                        @foreach (var activity in Career.DailyActivities)
                        {
                            <li class="flex items-start gap-2">
                                <span class="text-uwc-gold text-xl">‚Ä¢</span>
                                <span class="text-gray-700 dark:text-gray-300">@activity</span>
                            </li>
                        }
                    </ul>
                </div>
            }

            <!-- Required Skills -->
            @if (Career.RequiredSkills.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        ‚ö° Skills You'll Need
                    </h4>
                    <div class="ml-6 flex flex-wrap gap-2">
                        @foreach (var skill in Career.RequiredSkills)
                        {
                            <span class="px-4 py-2 bg-gradient-to-r from-uwc-navy to-blue-800 text-white rounded-full text-sm font-medium">
                                @skill
                            </span>
                        }
                    </div>
                </div>
            }

            <!-- Work Environments -->
            @if (Career.WorkEnvironments.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        üè¢ Where You Could Work
                    </h4>
                    <div class="ml-6 grid grid-cols-2 md:grid-cols-3 gap-3">
                        @foreach (var env in Career.WorkEnvironments)
                        {
                            <div class="p-3 bg-gray-100 dark:bg-gray-700 rounded-lg text-center">
                                <p class="text-sm text-gray-800 dark:text-gray-200">@env</p>
                            </div>
                        }
                    </div>
                </div>
            }

            <!-- Interesting Facts -->
            @if (Career.InterestingFacts.Any())
            {
                <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
                    <h4 class="font-bold text-lg text-uwc-navy dark:text-uwc-gold mb-3 flex items-center gap-2">
                        üí° Cool Facts & Insights
                    </h4>
                    <div class="ml-6 space-y-3">
                        @foreach (var fact in Career.InterestingFacts)
                        {
                            <div class="p-4 bg-gradient-to-r from-yellow-50 to-orange-50 dark:from-yellow-900 dark:to-orange-900 rounded-lg border-l-4 border-uwc-gold">
                                <p class="text-gray-800 dark:text-gray-200">@fact</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }

    <!-- Toggle Button -->
    <div class="mt-6 text-center">
        <button 
            @onclick="ToggleExpand"
            class="btn-secondary px-6 py-2">
            @if (IsExpanded)
            {
                <span>Show Less</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" />
                </svg>
            }
            else
            {
                <span>Show Full Details</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            }
        </button>
    </div>
</div>

@code {
    [Parameter]
    public CareerPath Career { get; set; } = new();

    [Parameter]
    public bool InitiallyExpanded { get; set; } = false;

    private bool IsExpanded { get; set; }

    protected override void OnInitialized()
    {
        IsExpanded = InitiallyExpanded;
    }

    private void ToggleExpand()
    {
        IsExpanded = !IsExpanded;
    }

    private string GetMatchColorClass(double score)
    {
        if (score >= 80) return "bg-green-500 text-green-600";
        if (score >= 70) return "bg-blue-500 text-blue-600";
        if (score >= 60) return "bg-yellow-500 text-yellow-600";
        return "bg-orange-500 text-orange-600";
    }
}
