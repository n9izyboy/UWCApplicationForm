@* Navigation Buttons Component *@

<div class="flex items-center justify-between gap-4 mt-8">
    @if (ShowPrevious)
    {
        <button 
            @onclick="OnPreviousClick"
            class="btn-secondary flex items-center gap-2"
            disabled="@DisablePrevious">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>Previous</span>
        </button>
    }
    else
    {
        <div></div>
    }

    <div class="flex gap-2">
        @if (ShowSave)
        {
            <button 
                @onclick="OnSaveClick"
                class="btn-secondary flex items-center gap-2"
                disabled="@DisableSave">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                </svg>
                <span class="hidden sm:inline">Save Progress</span>
                <span class="sm:hidden">Save</span>
            </button>
        }

        @if (IsLastSection)
        {
            <button 
                @onclick="OnSubmitClick"
                class="@GetSubmitButtonClass()"
                disabled="@DisableSubmit">
                @if (IsSubmitting)
                {
                    <svg class="animate-spin h-5 w-5 mr-2 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span>Submitting...</span>
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>Submit Application</span>
                }
            </button>
        }
        else
        {
            <button 
                @onclick="OnNextClick"
                class="btn-primary flex items-center gap-2"
                disabled="@DisableNext">
                <span>Next</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        }
    </div>
</div>

@code {
    [Parameter]
    public bool ShowPrevious { get; set; } = true;

    [Parameter]
    public bool ShowSave { get; set; } = true;

    [Parameter]
    public bool IsLastSection { get; set; } = false;

    [Parameter]
    public bool DisablePrevious { get; set; } = false;

    [Parameter]
    public bool DisableNext { get; set; } = false;

    [Parameter]
    public bool DisableSave { get; set; } = false;

    [Parameter]
    public bool DisableSubmit { get; set; } = false;

    [Parameter]
    public bool IsSubmitting { get; set; } = false;

    [Parameter]
    public EventCallback OnPreviousClick { get; set; }

    [Parameter]
    public EventCallback OnNextClick { get; set; }

    [Parameter]
    public EventCallback OnSaveClick { get; set; }

    [Parameter]
    public EventCallback OnSubmitClick { get; set; }

    private string GetSubmitButtonClass()
    {
        var baseClass = "btn-submit flex items-center gap-2";
        return DisableSubmit ? baseClass : $"{baseClass} pulse";
    }
}
